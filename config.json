{
    "file_picker_config": {
        "cursor": ">",
        "show_size": true,
        "show_mode": true,
        "show_mod_time": false,
        "show_content": true,
        "keybinds": {
            "up": [
                "k",
                "up"
            ],
            "down": [
                "j",
                "down"
            ],
            "back": [
                "h",
                "left"
            ],
            "enter": [
                "enter",
                "right",
                "l"
            ],
            "select_mode": [
                "V"
            ],
            "select_one": [
                "v"
            ]
        },
        "styles": {
            "default_file": {
                "foreground_color": "#f0f1f2",
                "width": 75,
            },
            "folder": {
                "foreground_color": "#f0f1f2",
            },
            "current_path": {
                "foreground_color": "#cf34c7",
                "padding": [
                    2
                ],
                "bold": true,
            },
            "mode_style": {
                "foreground_color": "#cf3443",
            },
            "size_style": {
                "foreground_color": "#3460cf",
            },
            "selected": {
                "foreground_color": "#000000",
                "background_color": "#c7c8c9"
            }
        }
    }
}
